<Window x:Class="GridLiner.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GridLiner"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Window.DataContext>
        <local:GridLinerViewModel/>
    </Window.DataContext>
        
<Grid>
        <Canvas x:Name="PictureCanvas" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
            <Image Source="{Binding ImagePath}" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
            <Canvas x:Name="GridCanvas" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                
            </Canvas>

        </Canvas>
        
    </Grid>
</Window>
